// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  usuario_id String @id @default(uuid())
  nome String
  senha String
  email String
  endereco String
  CEP String
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  produto Produto[]
  lista_de_desejos Lista_de_desejos?
  pedido_de_compra Pedido_de_compra[]
}


model Lista_de_desejos {
  preco_acumulado Float

  usuario Usuario @relation(fields: [usuario_id],references: [usuario_id])
  usuario_id String @unique

  produto Lista_de_desejos_tem_produto[]
}

model Lista_de_desejos_tem_produto{
  lista_de_desejos Lista_de_desejos @relation(fields: [lista_de_desejos_id],references: [usuario_id])
  lista_de_desejos_id String
  produto Produto @relation(fields: [produto_id],references: [produto_id])
  produto_id String

  @@id([lista_de_desejos_id,produto_id])
}


model Pedido_de_compra {
  data DateTime @default(now())
  numero String
  total_a_pagar Float
  endereco String
  CEP String
  desconto Float

  usuario Usuario @relation(fields: [usuario_id],references: [usuario_id])
  usuario_id String @unique

  produto Pedido_de_compra_tem_produto[]
}

model Pedido_de_compra_tem_produto{
  pedido_de_compra Pedido_de_compra @relation(fields: [pedido_de_compra_id],references: [usuario_id])
  pedido_de_compra_id String
  produto Produto @relation(fields: [produto_id],references: [produto_id])
  produto_id String

 @@id([pedido_de_compra_id,produto_id])

}



model Produto {
  produto_id String @id @default(uuid())
  nome String
  preco Float
  proprietario String
  qtd_estoque Int
  criadoEm DateTime @default(now())
  atualizadoEm DateTime @updatedAt

  usuario Usuario @relation(fields: [usuario_id],references: [usuario_id])
  usuario_id String 
  pedido_de_compra Pedido_de_compra_tem_produto[]
  lista_de_desejos Lista_de_desejos_tem_produto[]
}

